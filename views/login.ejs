<%- include("./Partials/header.ejs") %>
<div class="seccion-login seccion">
    <h1 class="titulo-seccion">Login <span>damabrava</span></h1>
    <div class="container">
        <img src="./img/img-otros/333.webp" alt="">
        <form class="login-form" action="/login" method="POST">
            <img src="./img/img-otros/IMG_0272.PNG" alt="">
            <h1>Iniciar Sesión</h1>
            <div class="input-group">
                <label for="username">Usuario:</label>
                <input type="text" id="username" name="username" required>
            </div>
            <div class="input-group">
                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button class="btn-login" type="submit">Iniciar Sesión</button>
            <% if (usuarioAutenticado) { %>
            <a href="/adm" class="inicioRapido btn-login" style="display: block; text-decoration: none;">Inicio Rápido</a>
            <% } else { %>
            <span class="inicioRapido btn-login" style="display: none;">Inicio Rápido</span> <!-- O simplemente no renders esto -->
            <% } %>
        </form>
    </div>
</div> 
<%- include("./Partials/footer.ejs") %> 