<%- include("./Partials/header.ejs") %>
<div class="seccionLogin">
    <div class="container">
        <form class="login-form" action="/login" method="POST">
            <h2>Iniciar Sesión</h2>
            <div class="input-group">
                <label for="username">Usuario</label>
                <input type="text" id="username" name="username" required>
            </div>
            <div class="input-group">
                <label for="password">Contraseña</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button class="btn-login" type="submit">Iniciar Sesión</button>
            <% if (usuarioAutenticado) { %>
            <a href="/adm" class="inicioRapido btn-login" style="display: block; text-decoration: none;">Inicio Rápido</a>
            <% } else { %>
            <span class="inicioRapido btn-login" style="display: none;">Inicio Rápido</span> <!-- O simplemente no renders esto -->
            <% } %>
        </form>
    </div>
    
</div> 
<%- include("./Partials/footer.ejs") %> 