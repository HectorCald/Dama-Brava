<%- include("./Partials/header.ejs") %>
<div class="logoAdm">
    <p>ADMINISTRADOR</p>
    <img src="./Imagenes2/imgInicio/Logo Dama Brava2.webp" alt="">
</div>
<div class="db-administrador" id="administrador">
    <!-- Sección db productos -->
    <div class="db-productos div-animado" style="display: none;">
        <img src="./Imagenes2/imgAdm/formProductos.jpg" alt="">
        <h1>Productos</h1>
        <div class="buscadorAdm">
            <p>Buscador</p>
            <input type="text" class="buscar-producto-adm" id="searchInput" placeholder="Buscar producto...">
            <div class="btn-contenedor">
                <button class="btn-agregar-producto" id="mostrarForm" onclick="animacionAgregarProducto()">+</button>
                <p class="vista-previa">Agregar producto</p>
            </div>
        </div>
        <form id="productForm" class="formProduct2 targetSection" style="display: none;" onsubmit="event.preventDefault(); agregarProducto(nombre.value, precio.value, gramaje.value, imagen.files[0]);">
            <h1 class="titulo-agregar-producto">Agregar</h1>
            <input type="text" id="nombre" placeholder="Nombre" required oninput="this.value = this.value.toUpperCase();">
            <input type="number" id="precio" placeholder="Precio" step="0.01" required>
            <input type="number" id="gramaje" placeholder="Gramaje" required step="0.01" required>
            <h3>Imagen: <input id="imagen" type="file" accept="image/*" required></h3>
            <input type="hidden" id="editarId">
            <button type="submit" id="agregarBtn" class="boton-adm">Agregar</button>
            <button type="button" id="actualizarBtn" class="boton-adm" onclick="actualizarProducto()" style="display:none;" class="boton">Actualizar</button>
            <button type="button" id="cancelarEdicionBtn" class="boton-adm-cancelar" onclick="resetForm()" style="display:none;" class="boton">Cancelar Edición</button>
        </form>
        <div class="info-productos">
            <div class="titulos-consulta">
                <p class="tituloNombre">Nombre</p>
                <p class="tituloPrecio">Precio</p>
                <p class="tituloGramaje">Gramaje</p>
                <p class="tituloAcciones">Acciones</p>
            </div>
            <div id="productList"></div>
        </div>
    </div>





    <!-- Sección db recetas -->
    <div class="db-recetas div-animado">
        <img src="./Imagenes2/imgAdm/formRecetas2.jpeg" alt="">
        <h1>Recetas</h1>
        <div class="buscadorAdmRecetas">
            <p>Buscador</p>
            <input type="text" class="buscar-producto-adm" id="searchInput" placeholder="Buscar producto...">
            <div class="btn-contenedor">
                <button class="btn-agregar-producto" id="mostrarForm" onclick="animacionAgregarReceta()">+</button>
                <p class="vista-previa">Agregar producto</p>
            </div>
        </div>
        <form style="display: none;" id="recetaForm" class="formReceta formReceta2 targetSection" onsubmit="event.preventDefault(); agregarReceta(nombreReceta.value, descripcion.value, linkReceta.value, imagenReceta.files[0]);">
            <h1 class="titulo-agregar-receta">Agregar</h1>
            <input type="text" id="nombreReceta" placeholder="Nombre de la Receta" required oninput="this.value = this.value.toUpperCase();">
            <input type="text" id="descripcion" placeholder="Descripción" required>
            <input type="url" id="linkReceta" placeholder="Enlace a YouTube" required>
            <h3>Imagen: <input type="file" id="imagenReceta" accept="image/*" required></h3>
            <input type="hidden" id="editarRecetaId">
            <button type="submit" id="agregarRecetaBtn" class="boton-adm">Agregar</button>
            <button type="button" id="actualizarRecetaBtn" class="boton-adm" onclick="actualizarReceta()" style="display:none;" class="boton">Actualizar Receta</button>
            <button type="button" id="cancelarEdicionRecetaBtn" class="boton-adm-cancelar" onclick="resetFormReceta()" style="display:none;" class="boton">Cancelar Edición</button>
        </form>
        <div class="info-productos">
            <div class="titulos-consulta">
                <p>Nombre</p>
                <p>Descripción</p>
                <p>Acciones</p>
            </div>
            <div id="recetaList"></div>
        </div>
    </div>
    <!-- Sección cambiar contrseña -->
    <div class="db-contraseña div-animado">
        <form id="edit-password-form" class="formContraseña"></form>
            <h1>Cambiar contraseña</h1>
            <label for="username">Usuario:</label>
            <input type="text" id="username" name="username" required>
            <label for="current-password">Contraseña actual:</label>
            <input type="password" id="current-password" name="current-password" required>
            <label for="new-password">Nueva contraseña:</label>
            <input type="password" id="new-password" name="new-password" required>
            <label for="confirm-password">Confirmar nueva contraseña:</label>
            <input type="password" id="confirm-password" name="confirm-password" required>
            <button type="submit" class="boton-adm" onclick="editarContraseña()">Actualizar contraseña</button>
        </form>
    </div>
</div>
